<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Name="TODO" Orientation="Horizontal">
        <StackPanel>
            <Button Name="BotonInvierte" Content="Invierte" Margin="10" Click="BotonInvierte_Click"/>
            <Button Name="BotonMayus" Content="Mayusculas" Margin="10" Click="Mayusculas"/>
            <Button Name="FondoRojo" Margin="10" Click="Rojo" Height="30" Width="30">
                <Rectangle Width="20" Height="20" Fill="Red"/>
            </Button>
            <Button Name="FondoVerde" Margin="10" Click="Verde" Height="30" Width="30">
                <Rectangle Width="20" Height="20" Fill="Green"/>
            </Button>
        </StackPanel>
        <StackPanel >
            <TextBox x:Name="Texto" Width="100" Margin="10"/>
            <Label x:Name="Etiqueta" Width="100" Margin="10" Height="20"/>
        </StackPanel>
    </StackPanel>
</Window>
