        xmlns:local="clr-namespace:EL_PACTÓMETRO"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="  Opciones" HorizontalContentAlignment="Left" Click="MostrarMenu_Click" Height="25" HorizontalAlignment="Stretch" VerticalAlignment="Top">
